@model List<Instructor>
@{
    ViewData["Title"] = "Index";
}

<a href="/Instructor/AddInstructor" class="btn btn-primary">Add Instructor</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Course</th>
            <th>Department</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Course.Name</td>
                    <td>@item.Department.Name</td>
                    <td><img src="~/Images/@item.Image" style="width:100px;height:100px" /></td>
                <td><a href="/Instructor/details/@item.Id" class="btn btn-info">Details</a> | <a href="/Instructor/EditInstructor/@item.Id" class="btn btn-warning">Edit</a></td>
                </tr>
        }

    </tbody>
</table>
